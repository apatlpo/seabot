# remove module (bcm2708 refers ):
sudo modprobe -r i2c_bcm2708
# add module with baudrate
sudo modprobe i2c_bcm2708 baudrate=400000
sudo cat /sys/module/i2c_bcm2708/parameters/baudrate 

# check and change combined parameter
cat /sys/module/i2c_bcm2708/parameters/combined
# 
grep bcm2708 /etc/rc.local
sudo nano /etc/rc.local
#
# old:
sudo nano /sys/module/i2c_bcm2708/parameters/combined
# or
sudo sh -c 'echo Y >/sys/module/i2c_bcm2708/parameters/combined'
sudo sh -c 'echo N >/sys/module/i2c_bcm2708/parameters/combined'
# note: this parameter will be remembered

lsmod

